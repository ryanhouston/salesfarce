!!! 5
%html
  %head
    %title SalesFarce
    %link{:rel => 'shortcut icon', :href => 'https://na9.salesforce.com/favicon.ico'}
    %link{:rel => 'stylesheet', :href => '/css/site.css'}
    %link{:rel => 'stylesheet', :href => '/css/bootstrap.min.css'}
    %script{:src => '/js/bootstrap.min.js'}
  %body
    .container
      .row
        .sidebar
          .well.sidebar-nav.span2
            %ul.nav.nav-list
              %li.nav-header Menu
              %li
                %a{:href => '/'} Home
              - if @authenticated
                %li
                  %a{:href => '/logout'} Logout
              - else
                %li
                  %a{:href => "/auth/salesforce"} Login via OAuth on Salesforce
              %li.divider
              - if @authenticated
                %li
                  %a{:href => "/sf_users"} List SalesForce Users
              %li
                %a{:href => "/user/new"} Create User
              %li
                %a{:href => "/users" } List Users
        .content.span9.offset3
          %h1 SalesFarce User Tool
          - if flash[:notice]
            .alert= flash[:notice]
          = yield
